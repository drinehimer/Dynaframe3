@page "/"
@inherits LayoutComponentBase
@inject StateContainer State
@inject Services.DevicesService DevicesService
@using Dynaframe3.Client.Pages.Tabs

@if (!settingsLoaded)
{
    <div>Loading...</div>
}
else
{
