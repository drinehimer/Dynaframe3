                    </svg><br><span>Settings</span>
                </label>
            </li>
        </ul>

        <div class="slider @currentTab.ToString().ToLower()"><div class="indicator"></div></div>

        <div class="content">
            @switch (currentTab)
            {
                case Tab.Controls:
                    <Controls />
                    break;
                case Tab.Playlist:
                    <Playlists />
                    break;
                case Tab.Sync:
                    <Sync />
                    break;
                case Tab.Settings:
                    <Settings />
                    break;
            }
        </div>
    </div>
}

@code {
    private bool settingsLoaded;
    private Tab currentTab;
    private List<Device> devices;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        devices = await DevicesService.GetDevicesAsync();

        await State.SetCurrentDeviceAsync(devices.First().Id);
        settingsLoaded = true;
    }

    private void ChangeTab(Tab tab)
    {
        currentTab = tab;
    }

    private async void OnDeviceChange(ChangeEventArgs e)
    {
        await State.SetCurrentDeviceAsync((int)e.Value!);
    }

    private enum Tab
    {
        Controls,
        Playlist,
        Sync,
        Settings
    }
}