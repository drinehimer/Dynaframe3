        <div class="row">
            <div class="offset-md-3 col-md-6">
                <select id="deviceSelect" class="form-select" @onchange="OnDeviceChange">
                    @foreach (var device in devices)
                    {
                        <option value="@(device.Id)">@(device.HostName) - @(device.Ip)</option>
                    }
